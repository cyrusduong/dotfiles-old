# exit i3 custom
mode "exit [l]ock [s]hutdown [r]eboot [e]xit [Esc]ape" {
  #bindsym l exec i3lock -i ~/Pictures/Wallpapers/lock.png; mode "default"
  bindsym l exec echo "disconnect" | bluetoothctl && playerctl pause && i3lock -c 000000 && sleep 1 && xset dpms force off; mode "default"
  bindsym e exec i3-msg exit
  bindsym r exec systemctl reboot
  bindsym s exec systemctl poweroff
  bindsym Escape mode "default"
  bindsym Return mode "default"
}

bindsym $mod+Shift+e mode "exit [l]ock [s]hutdown [r]eboot [e]xit [Esc]ape"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 50 px or 5 ppt
        bindsym k resize grow height 50 px or 5 ppt
        bindsym l resize shrink height 50 px or 5 ppt
        bindsym semicolon resize grow width 50 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 50 px or 5 ppt
        bindsym Down resize grow height 50 px or 5 ppt
        bindsym Up resize shrink height 50 px or 5 ppt
        bindsym Right resize grow width 50 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

